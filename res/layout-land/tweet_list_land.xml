<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/FrameLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent">
 	<LinearLayout 
 		android:id="@+id/layout_background_app_left"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	 	<LinearLayout 
	 		android:id="@+id/layout_background_app"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
	 	</LinearLayout>
 	
 	</LinearLayout>
 	
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
		<ScrollView 
			android:id="@+id/layout_scroll"
		    android:layout_weight="1"
		    android:layout_width="0dip"
		    android:layout_height="fill_parent">
	    
			<LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent">
			    
				<LinearLayout 
					android:id="@+id/layout_top_bar"
				    android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content">
	
					    <ImageView 
					    	android:padding="5dip"
					    	android:id="@+id/icon_activity"
					    	android:background="@android:drawable/menuitem_background"
					        android:gravity="center"
					        android:layout_width="wrap_content" android:layout_height="wrap_content"
					        ></ImageView>
					    <TextView android:layout_height="fill_parent"
					    	android:gravity="center_vertical" android:text="User" 
					    	android:id="@+id/txt_title"
					    	android:layout_width="0dip"
					    	android:layout_weight="1"></TextView>
					    <ImageView android:id="@+id/refresh"
					    	android:padding="5dip"
					    	android:src="@drawable/gd_action_bar_compose" 
					    	android:layout_height="wrap_content" 
					    	android:layout_gravity="right" android:layout_width="wrap_content"></ImageView>
	
					    <ImageView android:id="@+id/refresh"
					    	android:padding="5dip"
					    	android:src="@drawable/gd_action_bar_refresh" 
					    	android:layout_height="wrap_content" 
					    	android:layout_gravity="right" android:layout_width="wrap_content"></ImageView>
	
			    </LinearLayout>
		    
				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/layout_bottom_bar"
			    	android:layout_height="fill_parent"
			    	android:orientation="vertical"
			    	>
			    	
					<LinearLayout 
					    android:orientation="horizontal"
					    android:layout_width="fill_parent"
						android:id="@+id/timeline"
						android:background="@android:drawable/menuitem_background"
					    android:layout_height="wrap_content">
		
						    <ImageView 
						    	android:padding="5dip"
						    	android:src="@drawable/action_bar_timeline"
						        android:gravity="center"
						        android:layout_width="wrap_content" android:layout_height="wrap_content"
						        ></ImageView>
						    <TextView android:layout_height="fill_parent"
						    	android:gravity="center_vertical" android:text="@string/timeline" 
						    	android:layout_width="wrap_content"></TextView>
						    <ImageView android:id="@+id/count_timeline" 
						    	android:layout_height="wrap_content" 
						    	android:layout_gravity="right" android:layout_width="fill_parent"></ImageView>
		
				    </LinearLayout>
				    
					<LinearLayout 
					    android:orientation="horizontal"
					    android:layout_width="fill_parent"
						android:id="@+id/mentions"
						android:background="@android:drawable/menuitem_background"
					    android:layout_height="wrap_content">
						    <ImageView 
						    	android:padding="5dip"
						    	android:src="@drawable/action_bar_mentions"
						        android:gravity="center"
						        android:layout_width="wrap_content" android:layout_height="wrap_content"
						        ></ImageView>
						    <TextView android:layout_height="fill_parent"
						    	android:gravity="center_vertical" android:text="@string/mentions" 
						    	android:layout_width="wrap_content"></TextView>
						    <ImageView android:id="@+id/count_mentions" 
						    	android:layout_height="wrap_content" 
						    	android:layout_gravity="right" android:layout_width="fill_parent"></ImageView>
				    </LinearLayout>
			    	
					<LinearLayout 
					    android:orientation="horizontal"
					    android:layout_width="fill_parent"
				    	android:id="@+id/direct_messages"
				    	android:background="@android:drawable/menuitem_background"
					    android:layout_height="wrap_content">
						    <ImageView 
						    	android:padding="5dip"
						    	android:src="@drawable/action_bar_dm"
						        android:gravity="center"
						        android:layout_width="wrap_content" android:layout_height="wrap_content"
						        ></ImageView>
						    <TextView android:layout_height="fill_parent"
						    	android:gravity="center_vertical" android:text="@string/direct_messages" 
						    	android:layout_width="wrap_content"></TextView>
						    <ImageView android:id="@+id/count_directmessages" 
						    	android:layout_height="wrap_content" 
						    	android:layout_gravity="right" android:layout_width="fill_parent"></ImageView>
				    </LinearLayout>
				        
					<LinearLayout 
					    android:orientation="horizontal"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content">
					    
						<LinearLayout 
						    android:orientation="horizontal"
						    android:layout_width="0dip"
					    	android:id="@+id/more"
					    	android:layout_weight="1"
					    	android:background="@android:drawable/menuitem_background"
						    android:layout_height="fill_parent">
					    
						    <ImageView 
						    	android:src="@drawable/action_bar_more"
						    	android:padding="5dip"
						        android:layout_width="wrap_content" android:layout_height="wrap_content"
						        ></ImageView>
						    <TextView android:layout_height="fill_parent"
						    	android:gravity="center_vertical" android:text="@string/txt_more" 
						    	android:layout_width="wrap_content"></TextView>
						    	
				    	</LinearLayout>
				    	
						<LinearLayout 
						    android:orientation="horizontal"
						    android:layout_width="0dip"
					    	android:id="@+id/search"
					    	android:layout_weight="1"
					    	android:background="@android:drawable/menuitem_background"
						    android:layout_height="fill_parent">
					    
						    <ImageView 
						    	android:src="@drawable/lens"
						    	android:padding="5dip"
						        android:layout_width="wrap_content" android:layout_height="wrap_content"
						        ></ImageView>
						    <TextView android:layout_height="fill_parent"
						    	android:gravity="center_vertical" android:layout_width="wrap_content" 
						    	android:text="@string/search"></TextView>
						    	
				    	</LinearLayout>
				    
		
			    	</LinearLayout>
			    	
					<LinearLayout 
					    android:orientation="horizontal"
					    android:id="@+id/data_grid"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content">
					    						
					    
			    	</LinearLayout>
			    	
					<LinearLayout android:layout_width="fill_parent"
				    	android:layout_height="wrap_content"
				    	android:minHeight="150dip"
				    	android:orientation="vertical"
				    	android:visibility="gone"
				    	android:id="@+id/layout_samples_search"
				    	android:gravity="center"
				    	>
				  		<TextView android:text="@string/msg_no_search" 
				  			android:paddingLeft="15dip"
				  			android:paddingRight="15dip"
				  			android:paddingBottom="20dip"
				  			android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"></TextView>
						<Button 
							android:text="@string/samples_search"
							android:id="@+id/bt_samples_search" android:layout_width="wrap_content" 
							android:layout_height="wrap_content"></Button>
					</LinearLayout>
			    		
				</LinearLayout>
		    
		    </LinearLayout>
	    
	    </ScrollView>
	    
		<LinearLayout
			android:id="@+id/layout_list" 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			>
<!-- 
			<ListView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:id="@+id/list"
				android:fadingEdgeLength="6dip"
				android:cacheColorHint="?attr/color_shadow_listview"
				></ListView>
	 -->			
	 	</LinearLayout>
			

			
	</LinearLayout>
	
		
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:id="@+id/layout_info_background"
			android:layout_marginBottom="45dip"
			android:gravity="bottom"
			android:orientation="vertical" android:visibility="gone"
			>
		<LinearLayout android:layout_width="fill_parent" android:layout_height="15dip"
				android:orientation="horizontal"
				android:gravity="center"
				android:background="?attr/color_background_text_info_background"
				>
			<TextView
			   	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:text="@string/txt_download_mentions_directs"
		    	style="@style/BackgroundText" />
		    	
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:clickable="true" android:id="@+id/layout_black" 
			android:orientation="vertical" android:gravity="center" android:visibility="gone"
			android:background="#44000000"
			>
	</LinearLayout>
	
		
	<LinearLayout 
		android:id="@+id/sidebar_menu_tweet"
		android:visibility="gone"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:clickable="true"
	    >
	    
	    <LinearLayout 
	    	android:gravity="center_horizontal"
	    	android:paddingLeft="29dip"
	    	android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:background="?attr/bg_sidebar"
		    android:layout_height="fill_parent">
		    
	    <LinearLayout
	    	android:id="@+id/sidebar_background" 
	    	android:gravity="center_horizontal"
	    	android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">

		    <LinearLayout 
		    	android:id="@+id/sidebar_head"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
			
		  	<ImageView 			
		  		android:layout_width="fill_parent" 
				android:layout_height="15dip"
				android:background="@drawable/border_shadow_horizontal"
			/>

		    <LinearLayout 
		    	android:id="@+id/sidebar_menu"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
	    
		    <LinearLayout 
		    	android:id="@+id/sidebar_content"
		    	android:padding="6dip"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
			
		    <LinearLayout 
		    	android:id="@+id/sidebar_foot"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
		
		</LinearLayout>		
		</LinearLayout>	

	</LinearLayout>
	
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:clickable="true" android:id="@+id/layout_image_help" 
			android:orientation="vertical" android:gravity="center_horizontal" android:visibility="gone"
			android:background="#44000000"
			>
		<ImageView 
			android:id="@+id/image_help" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"></ImageView>
	</LinearLayout>


	
</FrameLayout>
