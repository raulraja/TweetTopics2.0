<?xml version="1.0" encoding="utf-8"?>
				
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:id="@+id/layout_foot"
    	android:background="?attr/bottom_bar_background"
    	>
		<Button 
			style="@style/ButtonFootSidebar"
			android:gravity="center"
			android:text="@string/visit"
			android:layout_weight="1"
			android:id="@+id/bt_visit" android:layout_width="wrap_content" 
			android:layout_height="fill_parent"></Button>
			
	    <ImageView
	    	android:background="@drawable/action_bar_divider"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        ></ImageView>
			
		<Button 
			style="@style/ButtonFootSidebar"
			android:gravity="center"
			android:text="@string/actions"
			android:layout_weight="1"
			android:id="@+id/bt_actions" android:layout_width="wrap_content" 
			android:layout_height="fill_parent"></Button>
			
	    <ImageView
	    	android:background="@drawable/action_bar_divider"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        ></ImageView>
			
		<Button 
			style="@style/ButtonFootSidebar"
			android:gravity="center"
			android:text="@string/close"
			android:layout_weight="1"
			android:id="@+id/bt_close" android:layout_width="wrap_content" 
			android:layout_height="fill_parent"></Button>
</LinearLayout>
	