<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center" android:layout_width="wrap_content">

    <ImageView android:id="@+id/row_links_icon" android:src="@drawable/icon"
               android:gravity="center_horizontal" style="@style/PopupLinksImage"></ImageView>

    <TextView android:layout_height="wrap_content"
              android:id="@+id/row_links_title" android:layout_width="wrap_content"
              style="@style/PopupLinksText"
              />

</LinearLayout>
