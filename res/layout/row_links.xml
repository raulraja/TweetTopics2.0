<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center" android:layout_width="wrap_content">

    <ImageView android:id="@+id/row_links_icon" android:padding="5sp" android:adjustViewBounds="true"
               android:layout_width="54dip" android:layout_height="54dip" android:src="@drawable/icon"
               android:gravity="center_horizontal"></ImageView>

    <TextView style="@style/TextGridSearch" android:layout_height="wrap_content" android:text="Texto"
              android:id="@+id/row_links_title" android:layout_width="wrap_content" android:paddingBottom="10dip" android:singleLine="true"
              android:gravity="center_horizontal"/>

</LinearLayout>
