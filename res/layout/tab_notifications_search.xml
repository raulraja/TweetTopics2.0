<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent">
<LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="10sp">
	<CheckBox android:text="@string/notifications" android:id="@+id/cb_notifications" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
	
	<LinearLayout android:orientation="vertical" android:id="@+id/ll_notifications" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="10sp">
		<CheckBox android:text="@string/notifications_bar" android:id="@+id/cb_notifications_bar" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
	
	</LinearLayout>
	
</LinearLayout>
</ScrollView>
</LinearLayout>
