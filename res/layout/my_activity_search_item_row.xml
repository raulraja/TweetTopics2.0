<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:id="@+id/my_activity_search"
              android:background="@drawable/default_background"
              android:orientation="vertical" android:gravity="center" android:layout_width="0px"
              android:layout_weight="1">

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/my_activity_search_img" android:padding="5sp" android:adjustViewBounds="true"
                   android:layout_width="54dip" android:layout_height="54dip" android:src="@drawable/icon"></ImageView>
        <ImageView android:id="@+id/my_activity_search_tag_new" android:layout_height="wrap_content"
                   android:src="@drawable/tag_new" android:layout_gravity="right"
                   android:layout_width="fill_parent"></ImageView>
        <ImageView android:id="@+id/my_activity_search_tag_lang" android:layout_height="fill_parent"
                   android:layout_gravity="bottom" android:layout_width="fill_parent"></ImageView>
    </FrameLayout>
    <com.javielinux.components.AlphaTextView style="@style/TextGridSearch" android:layout_height="wrap_content"
                                             android:text="Texto" android:id="@+id/my_activity_search_title"
                                             android:layout_width="fill_parent" android:paddingBottom="10dip"
                                             android:lines="2" android:gravity="center_horizontal"/>

</LinearLayout>

