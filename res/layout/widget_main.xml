<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:background="@drawable/bg_widget"
    android:focusable="true">
    
   	<LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:orientation="horizontal"
    	android:id="@+id/w_title_layout"
    	>
    	
		<ImageView android:id="@+id/w_icon"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip"
			android:background="@android:color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			></ImageView>
    		    	
		<TextView
			android:id="@+id/w_title"
		   	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:paddingBottom="3dip"
		   	android:layout_weight="1"
	    	style="@style/WidgetTopicTitle" android:lines="1"/>
	    	
		<ImageButton android:id="@+id/btn_w_refresh"
			android:src="@drawable/btn_w_refresh"
			android:layout_marginRight="8dip"
			android:paddingTop="2dip"
			android:background="@android:color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			></ImageButton>
	    	
		<ImageButton android:id="@+id/btn_w_configure"
			android:src="@drawable/btn_w_configure"
			android:layout_marginRight="2dip"
			android:paddingTop="2dip"
			android:background="@android:color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			></ImageButton>

    	
    </LinearLayout>
    
    <RelativeLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_below="@+id/w_title_layout"
    	android:id="@+id/w_tweet_layout"
    	android:layout_marginTop="10dip"
    	android:minHeight="110dip"
    	>

		<ImageView
		   	android:id="@+id/w_user_avatar"
		   	android:src="@drawable/avatar"
	    	style="@style/TweetAvatar" />
	    	
		<LinearLayout android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_toRightOf="@id/w_user_avatar" 
		    	android:id="@+id/w_tweet_user_name_layout"
		    	>
			<TextView
			   	android:id="@+id/w_tweet_user_name_text"
			   	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:layout_weight="1"
		    	style="@style/WidgetTweetTitle" />
		    <TextView
			   	android:id="@+id/w_tweet_date"
			   	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
		    	style="@style/WidgetTweetDate"
		    	android:text="1h" />
		</LinearLayout>
		
		<TextView
		   	android:id="@+id/w_tweet_text"
		   	android:layout_marginTop="5dip"
		   	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
	    	android:layout_below="@+id/w_tweet_user_name_layout"
	    	style="@style/WidgetTweetText" 
	    	android:layout_toRightOf="@id/w_user_avatar" android:lines="4"/>
	    	
   	</RelativeLayout>
   	
    <RelativeLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="9dip"
    	android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
    	android:layout_below="@+id/w_tweet_layout"
    	android:id="@+id/w_buttons"
    	>
		<LinearLayout android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:gravity="center"
		    	>
			<ImageButton android:id="@+id/btn_w_prev"
				android:src="@drawable/btn_w_prev"
				android:background="@android:color/transparent"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></ImageButton>
				
			<LinearLayout android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:layout_weight="1" 
			    	android:gravity="center"
			    	android:layout_below="@+id/w_tweet_text" 
			    	android:id="@+id/w_tweet_photo_layout">
				<ImageView android:id="@+id/widget_link_1"
					android:src="@drawable/widget_icon_general_link_1" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_2"
					android:src="@drawable/widget_icon_general_link_2" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_3"
					android:src="@drawable/widget_icon_general_link_3" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_4"
					android:src="@drawable/widget_icon_general_link_4" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_5"
					android:src="@drawable/widget_icon_general_link_5" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
			</LinearLayout> 
				
			<ImageButton android:id="@+id/btn_w_next"
				android:src="@drawable/btn_w_next"
				android:background="@android:color/transparent"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></ImageButton>

		</LinearLayout>
	</RelativeLayout>
   	
</RelativeLayout>