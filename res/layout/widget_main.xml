<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_widget"
    android:focusable="true"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:paddingBottom="8dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:paddingTop="8dip">
    
   	<LinearLayout android:id="@+id/w_title_layout"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
    	
		<ImageView android:id="@+id/w_icon"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    		    	
		<TextView android:id="@+id/w_title"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:lines="1"
            android:paddingBottom="3dip"
            style="@style/WidgetTopicTitle" />
	    	
		<ImageButton android:id="@+id/btn_w_refresh"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_width="wrap_content"
            android:paddingTop="2dip"
            android:src="@drawable/btn_w_refresh" />
	    	
		<ImageButton android:id="@+id/btn_w_configure"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_width="wrap_content"
            android:paddingTop="2dip"
            android:src="@drawable/btn_w_configure" />

    </LinearLayout>
    
    <RelativeLayout android:id="@+id/w_tweet_layout"
        android:layout_below="@+id/w_title_layout"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:minHeight="110dip"
        android:orientation="horizontal">

        <FrameLayout android:id="@+id/fr_avatar"
            style="@style/TweetFrAvatar">

            <ImageView android:id="@+id/w_user_avatar"
                android:src="@drawable/avatar"
                style="@style/TweetAvatar" />

            <ImageView android:id="@+id/tag_avatar"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </FrameLayout>

        <LinearLayout android:id="@+id/w_tweet_user_name_layout"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fr_avatar"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView android:id="@+id/w_tweet_user_name_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/WidgetTweetTitle" />

            <TextView android:id="@+id/w_tweet_source"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                style="@style/WidgetTweetTitle" />

            <TextView android:id="@+id/w_tweet_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="1h"
                style="@style/WidgetTweetDate" />

            <ImageView android:id="@+id/tag_conversation"
                       android:paddingTop="5dip"
                       android:paddingRight="5dip"
                       android:src="@drawable/tag_conversation"
                       android:layout_height="wrap_content"
                       android:visibility="visible"
                       android:layout_width="wrap_content" />

            <ImageView android:id="@+id/tag_map"
                       android:paddingTop="5dip"
                       android:paddingRight="5dip"
                       android:src="@drawable/tag_map"
                       android:layout_height="wrap_content"
                       android:visibility="visible"
                       android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_below="@+id/w_tweet_user_name_layout"
                      android:layout_toRightOf="@id/fr_avatar"
                      android:id="@+id/w_tweet_text_layout"
                >

            <TextView
                    android:id="@+id/w_tweet_text"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="4"
                    style="@style/WidgetTweetText"
                    />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <LinearLayout android:id="@+id/tweet_photo_multi_img_container"
                    android:background="@drawable/container_image_multiple"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:gravity="center">

                    <ImageView android:id="@+id/tweet_photo_multi_img"
                        android:layout_height="27dp"
                        android:layout_width="29dp"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout android:id="@+id/tweet_photo_img_container"
                    android:background="@drawable/container_image_simple"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:gravity="center">

                    <ImageView android:id="@+id/tweet_photo_img"
                        android:layout_height="27dp"
                        android:layout_width="29dp"
                        android:scaleType="centerCrop" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dip"
                android:orientation="horizontal"
                android:paddingLeft="60dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:layout_below="@+id/tweet_text_layout"
                android:visibility="gone"
                android:id="@+id/retweet_layout">

            <ImageView
                    android:src="@drawable/icon_retweet_by"
                    android:paddingRight="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/retweet_by"
                    android:paddingRight="5dip"
                    android:id="@+id/retweet_text"
                    style="@style/WidgetTweetText"
                    />

            <ImageView
                    android:id="@+id/retweet_avatar"
                    android:src="@drawable/avatar"
                    android:paddingRight="5dip"
                    style="@style/RetweetAvatar" />

            <TextView
                    android:id="@+id/retweet_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WidgetTweetText"
                    />

        </LinearLayout>

   	</RelativeLayout>
   	
		<LinearLayout android:id="@+id/w_buttons"
                android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:gravity="center"
                android:layout_marginTop="9dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_below="@+id/w_tweet_layout"
		    	>
			<ImageButton android:id="@+id/btn_w_prev"
				android:src="@drawable/btn_w_prev"
				android:background="@android:color/transparent"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></ImageButton>
				
			<LinearLayout android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:layout_weight="1" 
			    	android:gravity="center"
			    	android:layout_below="@+id/w_tweet_text" 
			    	android:id="@+id/w_tweet_photo_layout">
				<ImageView android:id="@+id/widget_link_1"
					android:src="@drawable/widget_icon_general_link_1" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_2"
					android:src="@drawable/widget_icon_general_link_2" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_3"
					android:src="@drawable/widget_icon_general_link_3" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_4"
					android:src="@drawable/widget_icon_general_link_4" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
				<ImageView android:id="@+id/widget_link_5"
					android:src="@drawable/widget_icon_general_link_5" 
					android:background="@drawable/image_link_background"
					style="@style/WidgetTweetLink"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
			</LinearLayout> 
				
			<ImageButton android:id="@+id/btn_w_next"
				android:src="@drawable/btn_w_next"
				android:background="@android:color/transparent"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></ImageButton>

		</LinearLayout>

</RelativeLayout>