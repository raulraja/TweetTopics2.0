<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/FrameLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent">
 	<LinearLayout 
 		android:id="@+id/layout_background_app"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
 	</LinearLayout>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
		<LinearLayout
			android:id="@+id/layout_list" 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
<!-- 
			<ListView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:id="@+id/list"
				android:fadingEdgeLength="6dip"
				android:cacheColorHint="?attr/color_shadow_listview"
				></ListView>
	 -->			
	 	</LinearLayout>
			
		<LinearLayout android:layout_width="fill_parent"
			android:background="?attr/bottom_bar_background" 
			android:id="@+id/layout_bottom_bar"
	    	android:layout_height="45dip"
	    	android:orientation="horizontal"
	    	android:gravity="center"
	    	>
	    	
	    	<FrameLayout android:id="@+id/FrameLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
			    <ImageButton 
			    	android:id="@+id/timeline"
			    	android:background="@android:drawable/menuitem_background"
			    	android:src="@drawable/action_bar_timeline"
			        android:gravity="center"
			        android:layout_width="45dip" android:layout_height="45dip"
			        ></ImageButton>
			    <ImageView android:id="@+id/count_timeline" 
			    	android:layout_height="wrap_content" 
			    	android:layout_gravity="right" android:layout_width="fill_parent"></ImageView>
		    </FrameLayout>
		    
		    <ImageView
		    	android:background="@drawable/action_bar_divider"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        ></ImageView>
		    
		    <FrameLayout android:id="@+id/FrameLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content">
			    <ImageButton 
			    	android:id="@+id/mentions"
			    	android:background="@android:drawable/menuitem_background"
			    	android:src="@drawable/action_bar_mentions"
			        android:gravity="center"
			        android:layout_width="45dip" android:layout_height="45dip"
			        ></ImageButton>
			    <ImageView android:id="@+id/count_mentions" 
			    	android:layout_height="wrap_content" 
			    	android:layout_gravity="right" android:layout_width="fill_parent"></ImageView>
		    </FrameLayout>
	    	
	   		<LinearLayout
	   			android:layout_weight="1"
	   			android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:orientation="horizontal"
		    	android:gravity="center"
		    	android:paddingLeft="3dip"
		    	>

		    </LinearLayout>
		    
		    <FrameLayout android:id="@+id/FrameLayout03" android:layout_width="wrap_content" android:layout_height="wrap_content">
			    <ImageButton 
			    	android:id="@+id/direct_messages"
			    	android:background="@android:drawable/menuitem_background"
			    	android:src="@drawable/action_bar_dm"
			        android:gravity="center"
			        android:layout_width="45dip" android:layout_height="45dip"
			        ></ImageButton>
			    <ImageView android:id="@+id/count_directmessages" 
			    	android:layout_height="wrap_content" 
			    	android:layout_gravity="right" android:layout_width="fill_parent"></ImageView>
		    </FrameLayout>
		        
		    <ImageView
		    	android:background="@drawable/action_bar_divider"
		        android:layout_width="wrap_content" android:layout_height="wrap_content"
		        ></ImageView>
		    
		    <ImageButton 
		    	android:id="@+id/more"
		    	android:background="@android:drawable/menuitem_background"
		    	android:src="@drawable/action_bar_more"
		        android:gravity="center"
		        android:layout_width="45dip" android:layout_height="45dip"
		        ></ImageButton>
	    	
		</LinearLayout>
			
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:id="@+id/layout_info_background"
			android:layout_marginBottom="45dip"
			android:gravity="bottom"
			android:orientation="vertical" android:visibility="gone"
			>
		<LinearLayout android:layout_width="fill_parent" android:layout_height="15dip"
				android:orientation="horizontal"
				android:gravity="center"
				android:background="?attr/color_background_text_info_background"
				>
			<TextView
			   	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:text="@string/txt_download_mentions_directs"
		    	style="@style/BackgroundText" />
		    	
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:clickable="true" android:id="@+id/layout_black" 
			android:orientation="vertical" android:gravity="center" android:visibility="gone"
			android:background="#44000000"
			>
	</LinearLayout>
	 	
	<SlidingDrawer android:id="@+id/drawer" android:layout_width="fill_parent" android:layout_height="fill_parent" android:handle="@+id/handle" android:content="@+id/content" android:hapticFeedbackEnabled="true" android:orientation="vertical" android:addStatesFromChildren="true">
	    	
   		<LinearLayout
   			android:id="@id/handle"
   			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:gravity="center"
	    	>
	   		<LinearLayout
	   			android:id="@+id/slide" 
	   			android:layout_width="123dip"
		    	android:layout_height="42dip"
		    	android:layout_marginTop="3dip"
		    	android:orientation="horizontal"
		    	android:gravity="center"
		    	>
				<ImageView 
					android:id="@+id/icon_handle"
					android:layout_marginRight="5dip" 
					android:src="@drawable/lens" 
					android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
		  		<TextView android:text="@string/msg_more_search" 
		  			style="@style/SlideTitle"
		  			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		    </LinearLayout>
		    
		    <LinearLayout
	   			android:id="@+id/bar_title" 
	   			android:layout_width="fill_parent"
		    	android:layout_height="45dip"
		    	android:orientation="horizontal"
		    	android:gravity="center"
		    	android:visibility="gone"
		    	android:background="@drawable/action_bar_background" 
		    	>
		        <TextView style="@style/WindowTitle" 
		        	android:id="@+id/title"
					android:padding="4dip"
			        android:layout_width="fill_parent" android:layout_height="fill_parent"
			        android:layout_weight="1"
			        android:gravity="center_vertical"
			        android:text="@string/msg_about_read"></TextView>
		    </LinearLayout>
		    
	    </LinearLayout>
		    

      
	  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@id/content" 
	  	android:orientation="vertical">
	  	
	  	<ImageView 			
	  		android:layout_width="fill_parent" 
			android:layout_height="2dip"
			android:id="@+id/img_border_top_search"
		/>
	  	  	
		<GridView android:id="@+id/grid_search" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:numColumns="auto_fit"
		    android:horizontalSpacing="5dip"
		    android:columnWidth="100dip"
		    android:stretchMode="columnWidth"
		    android:gravity="center">
		</GridView>
		
		<LinearLayout android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:minHeight="150dip"
	    	android:orientation="vertical"
	    	android:visibility="gone"
	    	android:id="@+id/layout_samples_search"
	    	android:gravity="center"
	    	>
	  		<TextView android:text="@string/msg_no_search" 
	  			android:paddingLeft="15dip"
	  			android:paddingRight="15dip"
	  			android:paddingBottom="20dip"
	  			android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"></TextView>
			<Button 
				android:text="@string/samples_search"
				android:id="@+id/bt_samples_search" android:layout_width="wrap_content" 
				android:layout_height="wrap_content"></Button>
		</LinearLayout>
	
	  </LinearLayout>

	</SlidingDrawer>
	
		
	<LinearLayout 
		android:id="@+id/sidebar_menu_tweet"
		android:visibility="gone"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:clickable="true"
	    >
	    
	    <LinearLayout 
	    	android:gravity="center_horizontal"
	    	android:paddingLeft="29dip"
	    	android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:background="?attr/bg_sidebar"
		    android:layout_height="fill_parent">
		    
	    <LinearLayout
	    	android:id="@+id/sidebar_background" 
	    	android:gravity="center_horizontal"
	    	android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">

		    <LinearLayout 
		    	android:id="@+id/sidebar_head"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
			
		  	<ImageView 			
		  		android:layout_width="fill_parent" 
				android:layout_height="15dip"
				android:background="@drawable/border_shadow_horizontal"
			/>

		    <LinearLayout 
		    	android:id="@+id/sidebar_menu"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
	    
		    <LinearLayout 
		    	android:id="@+id/sidebar_content"
		    	android:padding="6dip"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
			
		    <LinearLayout 
		    	android:id="@+id/sidebar_foot"
		    	android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
			    
			</LinearLayout>
		
		</LinearLayout>		
		</LinearLayout>	

	</LinearLayout>
	
	
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:clickable="true" android:id="@+id/layout_image_help" 
			android:orientation="vertical" android:gravity="center_horizontal" android:visibility="gone"
			android:background="#44000000"
			>
		<ImageView 
			android:id="@+id/image_help" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"></ImageView>
	</LinearLayout>


	
</FrameLayout>
