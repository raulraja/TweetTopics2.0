<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="Nombre"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
            
    <EditText
        android:id="@+id/type_color_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="5dip"
	    android:gravity="center">
		<ImageButton 
			android:id="@+id/color1" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton 
			android:id="@+id/color2" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton 
			android:id="@+id/color3" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton 
			android:id="@+id/color4" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
    </LinearLayout>
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="5dip"
	    android:gravity="center">
		<ImageButton 
			android:id="@+id/color5" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton 
			android:id="@+id/color6" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton 
			android:id="@+id/color7" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton 
			android:id="@+id/color8" android:padding="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
    </LinearLayout>

        
</LinearLayout>
