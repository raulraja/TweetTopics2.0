<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    >
    
    <ImageView android:id="@+id/qa_avatar" android:layout_width="40dip" android:layout_height="40dip" 
    	android:paddingLeft="5dip"
    	android:adjustViewBounds="true" android:paddingRight="5dip"></ImageView>
    
	<TextView
		android:paddingLeft="5dip"
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:gravity="center_vertical"
		android:id="@+id/qa_text"
		style="@style/QuickActionText"
		android:singleLine="true"
		android:layout_weight="1"
		/>

	<TextView android:text="0" android:id="@+id/qa_n_timeline" android:layout_width="wrap_content" android:layout_height="fill_parent" style="@style/QuickActionNumberNoread" android:gravity="center_vertical"></TextView>
	<ImageView android:src="@drawable/icon_quickaction_message_noread" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingRight="5dip" android:gravity="center_vertical"></ImageView>
	<TextView android:text="0" android:id="@+id/qa_n_mentions" android:layout_width="wrap_content" android:layout_height="fill_parent" style="@style/QuickActionNumberNoread" android:gravity="center_vertical"></TextView>
	<ImageView android:src="@drawable/icon_quickaction_mentions_noread" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingRight="5dip" android:gravity="center_vertical"></ImageView>
	<TextView android:text="0" android:id="@+id/qa_n_directs" android:layout_width="wrap_content" android:layout_height="fill_parent" style="@style/QuickActionNumberNoread" android:gravity="center_vertical"></TextView>
	<ImageView android:src="@drawable/icon_quickaction_directs_noread" android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingRight="5dip" android:gravity="center_vertical"></ImageView>

</LinearLayout>