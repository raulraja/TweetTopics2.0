<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	
<LinearLayout 
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/ll_bg"
	android:layout_marginRight="5dip"
	>
	<ImageView
	   	android:id="@+id/bg_on"
	   	android:src="@drawable/bg_on_user"
	   	android:layout_width="fill_parent"
		android:layout_height="5dip" />
	<LinearLayout
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#555555"
		android:paddingLeft="2dip"
		android:paddingRight="2dip"
		android:paddingTop="2dip"
		android:gravity="center_horizontal">
	    <FrameLayout
			android:id="@+id/fr_avatar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>
			<ImageView
			   	android:id="@+id/icon"
			   	android:src="@drawable/avatar"
		    	style="@style/TweetAvatar" />
			<ImageView android:id="@+id/tag_network" 
				android:layout_height="wrap_content" 
				android:layout_gravity="right|bottom" 
				android:layout_width="wrap_content"></ImageView>
	    </FrameLayout>
	</LinearLayout>
    
    <TextView style="@style/NewTweetUserName"
    	android:gravity="center_horizontal"
    	android:textColor="#eeeeee"
    	android:paddingTop="1dip"
    	android:paddingBottom="1dip"
    	android:background="#555555"
    	android:text="TextView" android:id="@+id/username" android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
    
    <ImageView
	   	android:id="@+id/bg_off"
	   	android:src="@drawable/bg_off_user"
	   	android:layout_width="fill_parent"
		android:layout_height="5dip" />
    
</LinearLayout>
    
</LinearLayout>
