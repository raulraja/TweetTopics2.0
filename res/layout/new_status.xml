<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="?attr/color_background_solid"
	android:id="@+id/layout_background_app"
	android:layout_width="fill_parent">
	
	<ScrollView
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_weight="1"> 
	
	<LinearLayout
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_width="fill_parent">
		
		<LinearLayout
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"
			android:layout_width="fill_parent">
			
			<HorizontalScrollView android:id="@+id/users" 
				android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="2">
				<LinearLayout android:id="@+id/users_data" 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:orientation="horizontal"></LinearLayout>
			</HorizontalScrollView>
			
			<LinearLayout
				android:id="@+id/ll_msg"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:layout_width="0dip"
				android:layout_weight="3"
				android:gravity="bottom"
				>
				
				<TextView android:layout_height="wrap_content" android:layout_width="0dip"
					android:layout_weight="1" 
					android:id="@+id/txt_msg"
					android:padding="3dip"
					android:layout_marginBottom="5dip"  
					android:text="@string/msg_lite_user_new_status"
					style="@style/NewTweetMsg"
					></TextView>
				
				<Button 
					android:text=">"
					android:id="@+id/bt_pro" android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></Button>
				
			</LinearLayout>
			
		</LinearLayout>
		
		 <!-- textCapSentences|textMultiLine|textAutoCorrect|textAutoComplete --> 
		 
		<EditText android:text=""
			android:minLines="4" 
			android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
			android:id="@+id/text"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip" 
			style="@style/TextAutoCompleteTextView"
			android:gravity="top"
			></EditText>
			
		    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"
		    android:id="@+id/images"
			android:orientation="horizontal"
		    >
		    
		</LinearLayout>

			
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" 
			android:id="@+id/txt_type"
			android:padding="3dip"
			android:layout_marginLeft="10dip" 
			style="@style/TextTypeNewStatus"
			></TextView>
		
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/reftweet_layout"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"
			android:orientation="horizontal"
			android:background="?attr/background_reply"
		    >
		    
			<ImageView
			   	android:id="@+id/user_avatar"
			   	android:src="@drawable/avatar"
		    	style="@style/TweetAvatar" />
		    	
			<LinearLayout android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="vertical"
			    	android:id="@+id/tweet_user_name_layout"
			    	>
				<TextView
				   	android:id="@+id/tweet_user_name_text"
				   	android:layout_width="wrap_content"
				   	android:layout_height="wrap_content"
			    	style="@style/TweetTitle" />
				    	
				<TextView
				   	android:id="@+id/tweet_text"
				   	android:layout_width="wrap_content"
				   	android:layout_height="wrap_content"
			    	style="@style/TweetText" 
			    	/>
			</LinearLayout>
	
		</LinearLayout>  
		 
	</LinearLayout>
	
	</ScrollView>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="?attr/bottom_bar_background"
		android:id="@+id/buttons_foot"
		>
		
		<Button 
			style="@style/ButtonFootSidebar"
			android:gravity="center"
			android:text="@string/send"
			android:layout_weight="1"
			android:id="@+id/bt_send" android:layout_width="0dip" 
			android:layout_height="fill_parent"></Button>
			
	    <ImageView
	    	android:background="@drawable/action_bar_divider"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        ></ImageView>
			
		<ImageButton 
			style="@style/ButtonSmallFootSidebar"
			android:id="@+id/bt_timer" android:layout_width="40dip" 
	    	android:src="@drawable/gd_action_bar_timer"
			android:layout_height="fill_parent"></ImageButton>
			
	    <ImageView
	    	android:background="@drawable/action_bar_divider"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        ></ImageView>
			
		<ImageButton 
			style="@style/ButtonSmallFootSidebar"
			android:id="@+id/bt_geo" android:layout_width="40dip" 
	    	android:src="@drawable/gd_action_bar_geo"
			android:layout_height="fill_parent"></ImageButton>
			
	    <ImageView
	    	android:background="@drawable/action_bar_divider"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        ></ImageView>
			
		<ImageButton 
			style="@style/ButtonSmallFootSidebar"
			android:id="@+id/bt_shorter" android:layout_width="40dip"
	    	android:src="@drawable/gd_action_bar_shorter" 
			android:layout_height="fill_parent"></ImageButton>
			
	    <ImageView
	    	android:background="@drawable/action_bar_divider"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        ></ImageView>
			
		<TextView
			style="@style/TextFootSidebar"
            android:text="140"
			android:gravity="center"
			android:minWidth="40dip"
			android:id="@+id/bt_counter" android:layout_width="wrap_content" 
			android:layout_height="fill_parent"></TextView>
			
	        
	</LinearLayout>
	
	<HorizontalScrollView 
		android:layout_width="fill_parent"
		android:layout_height="45dip"
		android:background="#ffffff"
		android:visibility="gone"
		android:id="@+id/autocomplete_foot"
		>
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/autocomplete_data_foot"
			>
		</LinearLayout>
		
	</HorizontalScrollView>
	
</LinearLayout>