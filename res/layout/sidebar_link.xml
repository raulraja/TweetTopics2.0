<?xml version="1.0" encoding="utf-8"?>
          
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical" android:layout_width="fill_parent"
   android:paddingLeft="15dip"
   android:paddingRight="10dip"
   android:paddingBottom="5dip"
   android:layout_height="wrap_content">
    
 		<TextView style="@style/TextLink" android:text="titulo" android:id="@+id/text_link" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left"></TextView>
			
		<TextView style="@style/TextTitle" android:text="titulo" android:id="@+id/text_title" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:id="@+id/ll_content" android:gravity="center_horizontal"
				android:orientation="vertical">
	 		<ImageView android:id="@+id/link_image" android:layout_width="wrap_content" android:layout_height="fill_parent">
	 		</ImageView>
	 		
	 		<TextView style="@style/TextDescription" android:text="descripcion" android:id="@+id/text_description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="left"></TextView>
 		</LinearLayout>

</LinearLayout>