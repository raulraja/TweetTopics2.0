<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    >
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:id="@+id/tweet_ll"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

            <ImageView
                    android:id="@+id/tweet_avatar"
                    android:src="@drawable/avatar"
                    style="@style/TweetAvatar" />

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginRight="30dp"
                          android:layout_toRightOf="@id/tweet_avatar"
                          android:id="@+id/tweet_user_name_layout_sidebar"
                    >
                <TextView
                        android:id="@+id/tweet_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TweetTitle" android:singleLine="true"/>
                <TextView
                        android:id="@+id/tweet_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TweetDateSidebar"
                        android:text="1h" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tweet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:layout_below="@+id/tweet_avatar"
                    style="@style/TweetTextSidebar"
                    />

            <Button
                    style="@style/ButtonSidebar"
                    android:layout_alignParentRight="true"
                    android:drawableTop="?icon_favorite_off"
                    android:id="@+id/tweet_btn_favorite" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Button>

        </RelativeLayout>

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:id="@+id/tweet_actions_container">

            <Button
                    style="@style/ButtonSidebar"
                    android:layout_weight="1"
                    android:text="@string/reply"
                    android:drawableTop="?icon_social_reply"
                    android:id="@+id/tweet_btn_reply" android:layout_width="0px"
                    android:layout_height="wrap_content"></Button>
            <Button
                    style="@style/ButtonSidebar"
                    android:layout_weight="1"
                    android:text="@string/retweet"
                    android:drawableTop="?icon_social_retweet"
                    android:id="@+id/tweet_btn_retweet" android:layout_width="0px"
                    android:layout_height="wrap_content"></Button>
            <Button
                    style="@style/ButtonSidebar"
                    android:layout_weight="1"
                    android:text="@string/translate"
                    android:drawableTop="?icon_content_translate"
                    android:id="@+id/tweet_btn_translate" android:layout_width="0px"
                    android:layout_height="wrap_content"></Button>

            <Button
                    style="@style/ButtonSidebar"
                    android:layout_weight="1"
                    android:text="@string/more"
                    android:drawableTop="?icon_action_more_options"
                    android:id="@+id/tweet_btn_more" android:layout_width="0px"
                    android:layout_height="wrap_content"></Button>

        </LinearLayout>

        <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/tweet_indicator"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                />
        <android.support.v4.view.ViewPager
                android:id="@+id/tweet_pager"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

    </LinearLayout>
</FrameLayout>
