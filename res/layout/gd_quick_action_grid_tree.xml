<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<FrameLayout
		android:id="@+id/gdi_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/gdi_arrow_up"
		android:layout_marginTop="-1px"
		android:background="@drawable/gd_quick_action_top_frame" />
		
	<LinearLayout
		android:id="@+id/gdi_title"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/gdi_header"
		android:layout_marginTop="-4px"
		android:layout_marginBottom="-4px"
		android:paddingLeft="6dip"
		android:paddingRight="6dip"
		android:paddingTop="-4dip"
		android:paddingBottom="-4dip"
		android:background="@drawable/gd_quick_action_grid_bg"
		android:gravity="center_vertical"
		>
		
		<ImageView
			android:id="@+id/img_title"
			android:layout_width="22dip"
			android:layout_height="22dip"
			android:adjustViewBounds="true"
			/>
		
		<TextView
			style="@style/GreenDroid.Widget.QuickAction.Grid.Tree.Title"
			android:layout_weight="1"
			android:gravity="left"
			android:id="@+id/txt_title"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_marginTop="-1px"
			/>
			
		<ImageView
			android:id="@+id/img_title_back"
			android:visibility="gone"
			android:layout_width="22dip"
			android:layout_height="22dip"
			android:adjustViewBounds="true"
			android:src="@drawable/gd_action_bar_back" />
		
	</LinearLayout>

	<FrameLayout
		android:background="@drawable/gd_quick_action_grid_bg"
		android:id="@+id/gdi_grids"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/gdi_title"
		android:layout_marginTop="-1px"
		>

		<GridView
			style="@style/GreenDroid.Widget.QuickAction.Grid.Tree"
			android:id="@+id/gdi_grid"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="-1px" />
			
		<GridView
			style="@style/GreenDroid.Widget.QuickAction.Grid.Tree"
			android:id="@+id/gdi_grid_child"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_marginTop="-1px" />
			
	</FrameLayout>

	<FrameLayout
		android:id="@+id/gdi_footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/gdi_grids"
		android:background="@drawable/gd_quick_action_grid_bottom_frame" />

	<ImageView
		android:id="@+id/gdi_arrow_up"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/gd_quick_action_arrow_up" />

	<ImageView
		android:id="@+id/gdi_arrow_down"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/gdi_footer"
		android:layout_marginTop="-1px"
		android:src="@drawable/gd_quick_action_grid_arrow_down" />

</RelativeLayout>