<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <TextView
            android:id="@+id/my_activity_empty"
            android:visibility="gone"
            android:layout_marginTop="15dip"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:gravity="center_horizontal"
            style="@style/TextTypeNewStatus"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:text="@string/no_users"/>

    <ListView android:id="@+id/my_activity_users"
              android:layout_weight="1"
              android:layout_width="fill_parent"
              android:layout_height="0dip"
              android:cacheColorHint="@android:color/transparent"
              android:dividerHeight="0px"
              android:divider="@null"
            />


    <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/footer_buttons_height"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:id="@+id/layout_foot"
                  android:background="?attr/bottom_bar_background"
            >

        <ImageButton
                android:src="?icon_social_add_user"
                style="@style/ButtonImageFootSidebar"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/my_activity_add_user" android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>

        <ImageView
                android:background="@drawable/action_bar_divider"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                ></ImageView>

        <ImageButton
                android:src="?icon_action_search"
                style="@style/ButtonImageFootSidebar"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/my_activity_add_search" android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>

        <ImageView
                android:background="@drawable/action_bar_divider"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                ></ImageView>

        <ImageButton
                android:src="?icon_content_add_trending"
                style="@style/ButtonImageFootSidebar"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/my_activity_add_trending" android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>

        <ImageView
                android:background="@drawable/action_bar_divider"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                ></ImageView>

        <ImageButton
                android:src="?icon_action_more_options"
                style="@style/ButtonImageFootSidebar"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/my_activity_more_options" android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageButton>

    </LinearLayout>


</LinearLayout>
	
